<style>
  body {
    background-color: black;
  }

  ul {
    display: grid;
    grid-template-columns: auto auto auto;
    list-style-type: none;
    padding: 0;
  }

  li {
    background-color: lightgrey;
    display: flex;
    flex-direction: column;
    margin: 20px;
    padding: 20px;
    border-radius: 160px;
    text-align: center;
    align-items: center;
    height: 350px;
    transition: 0.5s;
  }

  li:hover {
    background-color: gray;
    color: whitesmoke;
    font-size: 20px;
    border-radius: 10px;
    transition: 0.5s;
  }

  img {
    width: 300px;
    height: 200px;
    border-radius: inherit;
  }

  .price {
    margin: 10px;
  }

  .ad-name {
    margin: 0;
  }

  .tags-title {
    margin: 10px;
  }

  .tags {
    margin: 10px;
  }
</style>

<ul>
  <% adList.forEach(ad => { %>
  <li>
    <img src="<%= `${ad.photo}` %> " alt="">
    <p class="price"><%= `U$D ${ad.price}` %></p cl>
    <h3 class="ad-name"><%= `${ad.adName}` %></h3>
    <h5 class="tags-title">Tags:</h5>
    <p class="tags"><%= `${ad.tags}` %></p>
  </li>
  <% }) %>
</ul>
